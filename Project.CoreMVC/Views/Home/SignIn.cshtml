@model UserRegisterModel

<center>
    
    <h1> SignIn'e Hoş Geldiniz  @TempData["Message"]  </h1>

    <form asp-controller="Home" asp-action="SignIn" method="post" class="p-3 w-75 m-auto">

        <div class="mb-3">
            <label> Kullanıcı İsmi Giriniz </label>
            <input asp-for="UserName" class="form-control" /> 
        </div>

        <div class="mb-3">
            <label> Şifre Giriniz </label>
            <input asp-for="Password" class="form-control" />
        </div>

        <div class="mb-3"> <button class="btn btn-primary"> Giriş Yap </button> </div>

    </form>
    
</center>