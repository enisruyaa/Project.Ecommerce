@model List<Subject>


<h1>
    <span class="text-danger">@TempData["Message"]</span>
</h1>

<section class="panel">
    <header class="panel-heading">
        Ticket Konularımız
    </header>
    <div class="panel-body">
        <div class="adv-table">
            <table   class="table table-hover">
                <thead>
                    <tr>
                        <th>Konu ID</th>
                        <th>Konu Başlığı</th>
                        <th class="hidden-phone">Sil</th>
                    </tr>
                </thead>
                <tbody>

                   
                   @foreach (Subject item in Model)
                    {
                        <tr class ="gradeX">

                            <td> @item.ID </td>
                            <td> @item.SubjectName </td>
                            <td class="center hidden-phone"><a asp-action="DeleteSubject" asp-route-id="@item.ID" class="btn btn-danger">Sil</a></td>
                        </tr>
                    }




                </tbody>
            </table>

        </div>
    </div>
</section>