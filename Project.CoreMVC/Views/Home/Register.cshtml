@model UserRegisterModel

<form asp-controller="Home" asp-action="Register" method="post" class="p-3 w-75 m-auto">

    <div class="mb-3">
        <label> Kullanıcı Adı Giriniz </label>
        <input asp-for="UserName" class="form-control" />
    </div>

    <div class="mb-3">
        <label> Şifre Giriniz </label>
        <input asp-for="Password" class="form-control" />
    </div>

    <div class="mb-3">
        <label> Email Giriniz </label>
        <input asp-for="Email" class="form-control" />
    </div>
    <br />
    <div class="mb-3"> <button class="btn btn-primary"> Kayıt Ol </button> </div>

</form>